{
    "compilerOptions": {
      "target": "ES2022",                     
      "module": "commonjs",                   
      "moduleResolution": "node",             
      "lib": ["ES2022"],                      
      "types": ["node"],                      
      "esModuleInterop": true,                
      "forceConsistentCasingInFileNames": true,
      "strict": true,                         
      "skipLibCheck": true,                   
      "outDir": "./dist",                     
      "rootDir": "../api"                     
    }
}  